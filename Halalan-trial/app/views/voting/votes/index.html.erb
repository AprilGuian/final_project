<% provide(:vote, "active") %> 
<% provide(:title, "Vote now!") %> 

<div class ="container">
  <div class="row">
    <div class="col-md-12">
      <h1><center>VOTES</center></h1>
      <hr>

      <h2><center>Hello, <%= current_user.full_name %>!</center></h2>
      <h4>Vote now for:</h4>
      <ul>
        <%@positions.each do |p|%>
        <li><%=p.name%><br>
          <%voted_for = false%>
            <% p.candidates.each do |c|%>
              <%c.votes.each do |v|%>
                <%if v.user_id == current_user.id%>
                  You have already voted for <%= v.candidate.full_name%>
                    <%voted_for = true%>
                  <% end %>
              <%end%>
            <% end %>
            </ol>
            <%if !voted_for%>
              <%=link_to "Vote for a #{p.name}", "/voting/new/#{p.id}" %>
              <%else%>
              <%end%>
        </li>
        <%end%>
      </ul>
      <hr>
      <br>
    </div>
  </div>
</div>
   